{
  "name": "hmpps-developer-portal",
  "version": "0.0.1",
  "description": "Hmpps Developer Portal",
  "repository": "git@github.com:ministryofjustice/hmpps-developer-portal.git",
  "license": "MIT",
  "scripts": {
    "prepare": "hmpps-precommit-hooks-prepare",
    "copy-views": "cp -R server/views dist/server/",
    "compile-sass": "sass --quiet-deps --no-source-map --load-path=node_modules/govuk-frontend/dist --load-path=node_modules/@ministryofjustice/frontend --load-path=. assets/scss/application.scss:./assets/stylesheets/application.css --style compressed",
    "watch-ts": "tsc -w",
    "watch-views": "nodemon --watch server/views -e html,njk -x npm run copy-views",
    "watch-node": "DEBUG=gov-starter-server* nodemon -r dotenv/config --watch dist/ --watch assets/js dist/server.js | bunyan -o short",
    "watch-sass": "npm run compile-sass -- --watch",
    "build": "npm run compile-sass && tsc && npm run copy-views",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-sass\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "watch-node-feature": "export $(cat feature.env) && nodemon --watch dist/ $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node-feature\" \"npm run watch-sass\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint .  --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "typecheck-main": "tsc",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist build node_modules stylesheets",
    "rebuild": "npm run clean && npm i && npm run build",
    "precommit:secrets": "gitleaks git --pre-commit --redact --staged --verbose --config .gitleaks/config.toml",
    "precommit:lint": "node_modules/.bin/lint-staged",
    "precommit:verify": "npm run typecheck && npm test",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "engines": {
    "node": "^24",
    "npm": "^11"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^8.0.0",
    "@ministryofjustice/hmpps-monitoring": "^1.0.0",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.8",
    "body-parser": "^2.2.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "datatables.net": "^2.3.6",
    "datatables.net-buttons": "^3.2.6",
    "datatables.net-buttons-dt": "^3.2.6",
    "datatables.net-dt": "^2.3.6",
    "datatables.net-searchpanes": "^2.3.5",
    "datatables.net-select": "^3.1.3",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.19",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "govuk-frontend": "^5.14.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.1",
    "jquery": "^3.7.1",
    "js-base64": "^3.7.8",
    "jszip": "3.10.1",
    "mermaid": "^11.12.2",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "pako": "^2.1.0",
    "redis": "^5.10.0",
    "superagent": "^10.3.0",
    "svg-pan-zoom": "^3.6.2",
    "url-value-parser": "^2.2.0"
  },
  "devDependencies": {
    "@ministryofjustice/eslint-config-hmpps": "^1.0.2",
    "@ministryofjustice/hmpps-precommit-hooks": "^1.0.2",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "@tsconfig/node24": "^24.0.4",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-session": "^2.0.49",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.9",
    "@types/nunjucks": "^3.2.6",
    "@types/pako": "^2.0.4",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "audit-ci": "^7.1.0",
    "axe-core": "^4.11.1",
    "cheerio": "^1.1.2",
    "concurrently": "^9.2.1",
    "cookie-session": "^2.1.1",
    "cypress": "^15.9.0",
    "cypress-axe": "^1.7.0",
    "cypress-multi-reporters": "^2.0.5",
    "dotenv": "^17.2.3",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.10",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "prettier-plugin-jinja-template": "^2.1.0",
    "sass": "^1.97.3",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
