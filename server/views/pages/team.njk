{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + team.name %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

<h1 data-test="detail-page-title">{{ team.name }}</h1>

<table class="componentData">
  <tbody>
    <tr>
      <th>ID</th>
      <td data-test="team-id">{{ team.id }}</td>
    </tr>
    <tr>
      <th>Products</th>
      <td>
        {% if team.products | length %}
        <ul>
          {% for product in team.products %}
            <li><a href="/products/{{ product.attributes.slug }}" data-test="product-{{ product.id }}">{{ product.attributes.name }}</a></li>
          {% endfor %}
        </ul>
        {% else %}
        <p data-test="no-products">None</p>
        {% endif %}
      </td>
    </tr>
    <tr>
      <th>Links</th>
      <td>
       <ul>
          <li><a class="govuk-link--no-visited-state" href="/monitor/team/{{  team.name | toMonitorName }}">
             Health Monitor
          </a></li>
          <li><a class="govuk-link--no-visited-state" href="/drift-radiator/teams/{{ team.name | toMonitorName }}">
             Deployment drift
          </a></li>
          {% if team.slackChannelId | length %}
          <li><a class="govuk-link--no-visited-state" href="slack://channel?team=T02DYEB3A&id={{ team.slackChannelId }}">
             Slack channel
          </a></li>
          {% endif %}
        </ul>
      </td>
    </tr>
  </tbody>
</table>

{% endblock %}

{% block bodyEnd %}
  <script type="module" src="/assets/govukFrontendInit.js"></script>
  <script src="/assets/moj/all.js"></script>
{% endblock %}
