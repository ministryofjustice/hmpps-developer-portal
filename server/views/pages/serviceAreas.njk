{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Service Areas" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

{{ breadCrumb("Service Areas", []) }}

  <div class="banner">
    <p>Last successful data collection by  {{ jobName }} at {{ lastSuccessfulRun }}</p>
  </div>
  <h1>Service Areas</h1>

  <table id="serviceAreasTable" class="stripe">
    <thead>
      <tr>
        <th class="govuk-!-width-one-quarter">Name</th>
        <th class="govuk-!-width-one-quarter">Service Owner</th>
        <th>Products</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th class="govuk-!-width-one-quarter">Name</th>
        <th class="govuk-!-width-one-quarter">Service Owner</th>
        <th>Products</th>
      </tr>
    </tfoot>
  </table>

{% endblock %}

{% block bodyEnd %}
  <script type="module" src="/assets/frontendInit.js"></script>
  
  <script src="/assets/js/common.js"></script>
  <script src="/assets/js/serviceAreas.js"></script>
{% endblock %}
