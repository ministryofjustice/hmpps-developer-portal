{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Products" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
{{ breadCrumb("Products", []) }}

  <h1>Products</h1>

  <table id="productsTable" class="stripe">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
        <th>Phase</th>
				<th>Product Set ID</th>
				<th>Product Set Name</th>
				<th>Team</th>
				<th>Service Area</th>
				<th>Lead Developer</th>
			</tr>
		</thead>
		<tfoot>
			<tr>
				<th>ID</th>
				<th>Name</th>
        <th>Phase</th>
				<th>Product Set ID</th>
				<th>Product Set Name</th>
				<th>Team</th>
				<th>Service Area</th>
				<th>Lead Developer</th>
			</tr>
		</tfoot>
  </table>
  <div class="banner">
    <p>Last successful data collection by  {{ jobName }} at {{ lastSuccessfulRun }}</p>
  </div>
{% endblock %}

{% block bodyEnd %}
  <script type="module" src="/assets/frontendInit.js"></script>

  <script src="/assets/js/common.js"></script>
  <script src="/assets/js/products.js"></script>
{% endblock %}
