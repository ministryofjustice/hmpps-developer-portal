{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + namepsace.hmpps_template.tf_label %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

{% set breadCrumbList = [
    {title: "Namespaces", href: "/namespaces"},
    {title: namespace.name, href: "/namespaces/" + namespace.name}
  ]
%}

{{ breadCrumb(namespace.hmpps_template.tf_label, breadCrumbList) }}

<h1 data-test="detail-page-title">{{ namespace.hmpps_template.tf_label }}</h1>

<table class="componentData">
  <tbody>
    <tr>
      <th>tf_label</th>
      <td>{{ namespace.hmpps_template.tf_label }}</td>
    </tr>
    <tr>
      <th>namespace</th>
      <td>{{ namespace.hmpps_template.namespace }}</td>
    </tr>
    <tr>
      <th>Application</th>
      <td>{{ namespace.hmpps_template.application }}</td>
    </tr>
    <tr>
      <th>Github Repo</th>
      <td><a href=https://github.com/ministryofjustice/{{ namespace.hmpps_template.github_repo }}>{{ namespace.hmpps_template.github_repo }}</a></td>
    </tr>
    <tr>
      <th>source_template_repo</th>
      <td>{{ namespace.hmpps_template.source_template_repo }}</td>
    </tr>
    <tr>
      <th>prevent_self_review</th>
      <td>{{ namespace.hmpps_template.prevent_self_review }}</td>
    </tr>
    <tr>
      <th>reviewer_teams</th>
      <td>
        {% for team in namespace.hmpps_template.reviewer_teams %}
          {{ team }}<br>
        {% endfor %}
      </td>
    </tr>
    <tr>
      <th>selected_branch_patterns</th>
      <td>
        {% for pattern in namespace.hmpps_template.selected_branch_patterns %}
          {{ pattern }}<br>
        {% endfor %}
      </td>
    </tr>
    <tr>
      <th>protected_branches_only</th>
      <td>{{ namespace.hmpps_template.protected_branches_only }}</td>
    </tr>
  </tbody>
</table>

{% endblock %}

{% block bodyEnd %}
  <script type="module" src="/assets/frontendInit.js"></script>
  
{% endblock %}
