{% extends "../partials/layout.njk" %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% set pageTitle = applicationName + " - Monitor" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
  <h1>Dependencies</h1>

  <form>
    <input type="hidden" name="_csrf" id="csrf" value="{{ csrfToken }}">
    {% include "../partials/filterDropDowns.njk" %}
    <div class="monitor-selectors govuk-button-group">
      {{ govukSelect({
        id: "dependencyData",
        name: "dependencyData",
        label: {
          text: "Dependency"
        },
        items: dropDownItems,
        attributes: {
          'data-test': 'dependency-select'
        }
      }) }}
      {{ govukButton({
        id: "selectDependency",
        name: "selectDependency",
        text: "Update",
        element: "button"
      }) }}
    </div>
  </form>

  {% if dependencyName|length %}
  <table class="stripe" id="dependenciesTable">
    <thead>
      <tr>
        <th>Component</th>
        <th>Version</th>
      </tr>
    </thead>
  </table>
  {% endif %}

{% endblock %}

{% block bodyEnd %}
  <script nonce="{{ cspNonce }}">
    const dataDependencyName = '{{ dependencyName }}'
    const dataDependencyType = '{{ dependencyType }}'
    const teamName = '{{ teamName }}'
    const productName = '{{ productName }}'
    const serviceAreaName = '{{ serviceAreaName }}'
    const customComponentName = '{{ customComponentName }}'
    const filterType = '{{ filterType }}'
  </script>
  <script type="module" src="/assets/govukFrontendInit.js"></script>
  <script src="/assets/moj/all.js"></script>
  <script src="/assets/js/dependencies.js"></script>
{% endblock %}
