{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + product.name %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

<h1 id="detailPageTitle">{{ product.name }}</h1>

<p>{{ product.description }}</p>

<p>Confluence: <a href="{{ product.confluenceLink }}">{{ product.confluenceLink }}</a></p>
<p>G Drive: <a href="{{ product.gDriveLink }}">{{ product.gDriveLink }}</a></p>
<p>ID: {{ product.id }}</p>
<p>Product Manager: {{ product.productManager }}</p>
<p>Delivery Manager: {{ product.deliveryManager }}</p>
<p>Subproduct? {% if product.subProduct %}Yes{% else %}No{% endif %}</p>
<p>Legacy? {% if product.legacyProduct %}Yes{% else %}No{% endif %}</p>
<p>Phase: {{ product.phase }}</p>
<p>Team: <a href="/teams/{{ product.team.id }}">{{ product.team.attributes.name }} ({{ product.team.attributes.t_id }})</a></p>
<p>Product Set: <a href="/product-sets/{{ product.productSet.id }}">{{ product.productSet.attributes.name }} ({{ product.productSet.attributes.ps_id }})</a></p>
<p>Components</p>
{% if product.components | length %}
<ul>
  {% for component in product.components %}
    <li><a href="/components/{{ component.id }}">{{ component.attributes.name }}</a></li>
  {% endfor %}
</ul>
{% else %}
<p>None</p>
{% endif %}


{% endblock %}

{% block bodyEnd %}
  <script src="/assets/govuk/all.js"></script>
  <script src="/assets/govukFrontendInit.js"></script>
  <script src="/assets/moj/all.js"></script>
{% endblock %}
