{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + product.name %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

<h1 id="detailPageTitle">{{ product.name }}</h1>

<table class="componentData">
  <tbody>
    <tr>
      <th>Description</th>
      <td>{{ product.description }}</td>
    </tr>
    <tr>
      <th>Confluence</th>
      <td>{% if product.confluenceLinks | length %}<ul>{% for confluenceLink in product.confluenceLinks %}<li><a href="{{ confluenceLink }}">{{ confluenceLink }}</a></li>{% endfor %}</ul>{% endif %}</td>
    </tr>
    <tr>
      <th>G Drive</th>
      <td><a href="{{ product.gDriveLink }}">{{ product.gDriveLink }}</a></td>
    </tr>
    <tr>
      <th>ID</th>
      <td>{{ product.id }}</p></td>
    </tr>
    <tr>
      <th>Product Manager</th>
      <td>{{ product.productManager }}</td>
    </tr>
    <tr>
      <th>Delivery Manager</th>
      <td>{{ product.deliveryManager }}</td>
    </tr>
    <tr>
      <th>Subproduct?</th>
      <td>{% if product.subProduct %}Yes{% else %}No{% endif %}</td>
    </tr>
    <tr>
      <th>Legacy?</th>
      <td>{% if product.legacyProduct %}Yes{% else %}No{% endif %}</td>
    </tr>
    <tr>
      <th>Phase</th>
      <td>{{ product.phase }}</td>
    </tr>
    <tr>
      <th>Team</th>
      <td>
        {% if product.team.attributes.name | length %}
        <a href="/teams/{{ product.team.attributes.slug }}">{{ product.team.attributes.name }} ({{ product.team.attributes.t_id }})</a>
        {% else %}
        No team associated with this product &#129301;
        {% endif %}
        </td>
    </tr>
    <tr>
      <th>Team Slack</th>
      <td>
        {% if product.team.attributes.slack_channel_id | length %}
        <a class="govuk-link--no-visited-state" href="slack://channel?team=T02DYEB3A&id={{ product.team.attributes.slack_channel_id }}">
        <image src="/assets/images/slack_favicon_32.png" width="32" height="32"></image>
          {% if product.team.attributes.slack_channel_name | length %}
          #{{ product.team.attributes.slack_channel_name }}
          {% else %}
          Link
          {% endif %}
          (opens slack)</a>
        {% else %}
        No team slack &#129301; - please provide one.
        {% endif %}
      </td>
    </tr>
    <tr>
      <th>Product Slack</th>
      <td>
      {% if product.slackChannelId | length %}
        <a class="govuk-link--no-visited-state" href="slack://channel?team=T02DYEB3A&id={{ product.slackChannelId }}">
        <image src="/assets/images/slack_favicon_32.png" width="32" height="32"></image>
        {% if product.slackChannelName | length %}
        #{{ product.slackChannelName }}
        {% else %}
        Link
        {% endif %}
        (opens slack)</a>
      {% else %}
        No product slack &#129301; - please provide one.
      {% endif %}
      </td>
    </tr>
    {% if product.productSet.id | length %}
    <tr>
      <th>Product Set</th>
      <td><a href="/product-sets/{{ product.productSet.id }}">{{ product.productSet.attributes.name }} ({{ product.productSet.attributes.ps_id }})</a></td>
    </tr>
    {% endif %}
    <tr>
      <th>Components</th>
      <td>
        {% if product.components | length %}
        <ul>
          {% for component in product.components %}
            <li><a href="/components/{{ component.attributes.name }}">{{ component.attributes.name }}</a></li>
          {% endfor %}
        </ul>
        {% else %}
        <p>None</p>
        {% endif %}
      </td>
    </tr>
    <tr>
      <th>Links</th>
      <td>
       <ul>
          <li><a class="govuk-link--no-visited-state" href="/monitor/product/{{  product.name | toMonitorName }}">
             Health monitor
          </a></li>
          <li><a class="govuk-link--no-visited-state" href="/drift-radiator/products/{{ product.name | toMonitorName }}">
             Deployment drift
          </a></li>
        </ul>
      </td>
    </tr>
  </tbody>
</table>


{% endblock %}

{% block bodyEnd %}
  <script type="module" src="/assets/govukFrontendInit.js"></script>
  <script src="/assets/moj/all.js"></script>
{% endblock %}
