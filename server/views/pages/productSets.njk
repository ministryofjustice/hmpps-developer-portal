{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Product Sets" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

{{ breadCrumb("Product Sets", []) }}

  <h1>Product Sets</h1>

  <table id="productSetsTable" class="stripe">
    <thead>
      <tr>
        <th class="govuk-!-width-one-quarter">ID</th>
        <th class="govuk-!-width-one-quarter">Name</th>
        <th>Products</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th class="govuk-!-width-one-quarter">ID</th>
        <th class="govuk-!-width-one-quarter">Name</th>
        <th>Products</th>
      </tr>
    </tfoot>
  </table>
  <div class="banner">
    <p>Last successful data collection by  {{ jobName }} at {{ lastSuccessfulRun }}</p>
  </div>
{% endblock %}

{% block bodyEnd %}
  <script type="module" src="/assets/frontendInit.js"></script>
  
  <script src="/assets/js/common.js"></script>
  <script src="/assets/js/productSets.js"></script>
{% endblock %}
