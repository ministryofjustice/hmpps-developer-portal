{% extends "../../partials/layout.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% set mainClasses = "govuk-main-wrapper--l" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: "Request submitted.",
        html: 'Your request for team <br><strong><a href="/teamRequest/update-github-teams-requests/' + teamName + '">' + teamName + '</a></strong> submitted successfully.'
      }) }}

      <h2 class="govuk-heading-m">What happens next</h2>

      <p class="govuk-body">
        Shortly PR will be created in hmpps-github-teams and SRE team will review and merge this request, you can check status <a href="/teamRequest/team-requests">here</a>.
      </p>
      <p class="govuk-body">
        Please contact SRE team in #ask-prisons-digital-sre slack channel.
      </p>
       <a class="govuk-button" href="/">Return to Home</a>

    </div>
  </div>
{% endblock %}
