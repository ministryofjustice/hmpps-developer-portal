{% extends "../partials/layout.njk" %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Veracode" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
{{ breadCrumb("Veracode", []) }}

  <h1>Veracode Scan Results</h1>
  <form method="GET" action="/veracode">
    <input type="hidden" name="_csrf" id="csrf" value="{{ csrfToken }}">
	{% include "../partials/filterDropDowns.njk" %}
	</form>

  <table id="veracodeTable" class="stripe">
		<tfoot>
			<tr>
				<th>Name</th>
				<th>Result</th>
				<th>Date</th>
				<th>Very High</th>
				<th>High</th>
				<th>Medium</th>
				<th>Low</th>
				<th>Score</th>
				<th>Report</th>
			</tr>
		</thead>
		<thead>
			<tr>
				<th>Name</th>
				<th>Result</th>
				<th>Date</th>
				<th>Very High</th>
				<th>High</th>
				<th>Medium</th>
				<th>Low</th>
				<th>Score</th>
				<th>Report</th>
			</tr>
		</tfoot>
  </table>

{% endblock %}

{% block bodyEnd %}
  <script type="module" src="/assets/govukFrontendInit.js"></script>
  <script src="/assets/moj/all.js"></script>
  <script src="/assets/js/common.js"></script>
  <script src="/assets/js/veracode.js"></script>
  <script nonce="{{ cspNonce }}">
    jQuery(function () {
      const components = {{components | toJson(2) | safe }}
      const csrfToken = "{{ csrfToken }}"
      const renderer = new VeracodeRenderer(csrfToken, 'list')
      renderer.start(components)
    })
  </script>
{% endblock %}
