{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Namespaces" %}
{% set mainClasses = "app-container govuk-body" %}
{% set containerClasses = "wide-screen" %}

{% block content %}

{{ breadCrumb("Namespaces", []) }}

  <h1>Namespaces</h1>

  <table id="namespacesTable" class="stripe">
    <thead>
      <tr>
        <th>Name</th>
        <th>RDS Instance</th>
        <th>Elasticache Cluster</th>
        <th>Pingdom Check</th>
        <th>HMPPS Template</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th>Name</th>
        <th>RDS Instance</th>
        <th>Elasticache Cluster</th>
        <th>Pingdom Check</th>
        <th>HMPPS Template</th>
      </tr>
    </tfoot>
  </table>
  <div class="banner">
    <p>Last successful data collection by  {{ jobName }} at {{ lastSuccessfulRun }}</p>
  </div>
{% endblock %}

{% block bodyEnd %}
  <script type="module" src="/assets/frontendInit.js"></script>
  
  <script src="/assets/js/common.js"></script>
  <script src="/assets/js/namespaces.js"></script>
{% endblock %}
